- model_class = Report
.page-header
  %h3=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:student_id) + ':'
  %br
  = @report.student_id
%p
  %strong= model_class.human_attribute_name(:homework_id) + ':'
  %br
  = @report.homework_id
%p
  %strong= model_class.human_attribute_name(:ratio) + ':'
  %br
  = @report.ratio
%p
  %strong= model_class.human_attribute_name(:quality) + ':'
  %br
  = @report.quality
%p
  %strong= model_class.human_attribute_name(:time) + ':'
  %br
  = @report.time

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), reports_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_report_path(@report), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), report_path(@report), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
