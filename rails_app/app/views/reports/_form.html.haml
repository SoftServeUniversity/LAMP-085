= form_for @report, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :student_id, :class => 'control-label'
    .controls
      = f.number_field :student_id, :class => 'number_field'
  .control-group
    = f.label :homework_id, :class => 'control-label'
    .controls
      = f.number_field :homework_id, :class => 'number_field'
  .control-group
    = f.label :ratio, :class => 'control-label'
    .controls
      = f.text_field :ratio, :class => 'text_field'
  .control-group
    = f.label :quality, :class => 'control-label'
    .controls
      = f.text_field :quality, :class => 'text_field'
  .control-group
    = f.label :time, :class => 'control-label'
    .controls
      = f.text_field :time, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), reports_path, :class => 'btn'
