<h3>Sign in</h3>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label', :for => 'inputEmail' %>
    <div class="controls">
      <%= f.text_field :email, :id => 'inputEmail', :placeholder => 'Email' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label', :for => 'inputPassword' %>
    <div class="controls">
      <%= f.password_field :password, :id => 'inputPassword', :placeholder => 'Password' %>
    </div>
  </div>

  <div class="control-group">
    <% if devise_mapping.rememberable? -%>
      <div class="controls">
        <label class="checkbox">
          <%= f.check_box :remember_me %> Remember me
        </label>
      </div>
    <% end %>
    <%= f.submit 'Sign in', :class => 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>



