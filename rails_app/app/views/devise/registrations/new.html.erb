<h3>Sign up</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="control-group">
    <%= f.label :email, :class => 'control-label', :for => 'inputEmail' %>
    <div class="controls">
      <%= f.text_field :email, :id => 'inputEmail', :placeholder => 'Email' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label', :for => 'inputPassword' %>
    <div class="controls">
      <%= f.password_field :password, :id => 'inputPassword', :placeholder => 'Password' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label', :for => 'inputPasswordConfirmation' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :id => 'inputPasswordConfirmation', :placeholder => 'Password Confirmation' %>
    </div>
  </div>

   <div class="control-group">
    <%= f.submit 'Sign up', :class => 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
